---
import SectionContainer from "../../components/SectionContainer.astro";
import Layout from "../../layouts/Layout.astro";

import AboutMe from "../../components/AboutMe.astro";
import Badge from "../../components/Badge.astro";
import Briefcase from "../../icons/Briefcase.astro";
import CalendlyIcon from "../../icons/Calendly.astro";
import CodeSandBox from "../../icons/CodeSandBox.astro";
import Experience from "../../components/Experience.astro";
import GithubIcon from "../../icons/Github.astro";
import LinkedInIcon from "../../icons/LinkedIn.astro";
import MailIcon from "../../icons/Mail.astro";
import CVIcon from "../../icons/CV.astro";
import cvEn from "../../assets/CVFernandoCantoraEN.pdf";
import Certifications from "../../components/Certifications.astro";
import SocialPill from "../../icons/SocialPill.astro";
import UserIcon from "../../icons/User.astro";
import { Image } from "astro:assets";
import miImagen from "../../assets/fcantora-IA.png";
import Projects from "../../components/Projects.astro";
---

<Layout
  title="Portfolio Fernando Cantora - Frontend Developer"
  description="Frontend developer specialized in React, Next.js, and UX development. Building modern, scalable, and accessible web applications. Available for freelance projects."
>
  <main class="px-4">
    <SectionContainer id="/#" class="py-12 pb-32">
      <div class="mb-8 flex flex-col items-center gap-x-6 md:flex-row">
        <div class="mb-6 aspect-square w-72 transition hover:scale-125 md:mb-0">
          <Image
            src={miImagen}
            alt="Pic of the creator of this site"
            width={400}
            height={400}
            quality="high"
            class="h-full w-full rounded-full object-cover object-center"
          />
        </div>

        <div class="flex flex-col items-start gap-4 text-left">
          <h1
            class="flex flex-row gap-x-4 pb-2 text-3xl font-bold text-white md:text-4xl lg:pb-3 lg:text-5xl"
          >
            Hey there! <br />I am Fernando
          </h1>
          <a
            class="my-2 flex w-full items-center justify-center hover:scale-105 md:mt-0 md:w-fit"
            href="https://www.linkedin.com/in/fcantora/"
            target="_blank"
            rel="noopener"
          >
            <Badge>Contact to hire</Badge>
          </a>
          <h2 class="max-w-[700px] text-wrap text-xl opacity-80 lg:text-2xl">
            <span class="text-yellow-300">Frontend developer and AI enthusiast.<br /></span>
            <span
              class="bg-gradient-to-r from-blue-500 via-white to-blue-500 bg-clip-text text-transparent"
              >From Buenos Aires, Argentina.</span
            >
          </h2>
        </div>
      </div>
      <nav class="mt-8 flex flex-wrap gap-4">
        <SocialPill href="https://www.linkedin.com/in/fcantora">
          <LinkedInIcon class="size-4 md:size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/FCantora">
          <GithubIcon class="size-4 md:size-6" />
          Github
        </SocialPill>
        <SocialPill href="https://calendly.com/fercantora/30min">
          <CalendlyIcon class="size-4 md:size-6" />
          Calendly
        </SocialPill>
        <SocialPill href="mailto:fer.cantora90@gmail.com">
          <MailIcon class="size-4 md:size-6" />
          fer.cantora90@gmail.com
        </SocialPill>
        <SocialPill href={cvEn} download="Fernando Cantora - en">
          <CVIcon class="size-4 md:size-6" />
          Download CV
        </SocialPill>
      </nav>
    </SectionContainer>
    <SectionContainer id="experience">
      <h2 class="mb-3 flex items-center gap-x-2 text-3xl font-semibold">
        <Briefcase class="size-8" />
        Work Experience
      </h2>
      <Experience />
    </SectionContainer>
    <SectionContainer id="projects">
      <h2 class="mb-3 flex items-center gap-x-2 text-3xl font-semibold">
        <CodeSandBox class="size-8" />
        Projects
      </h2>
      <Projects />
    </SectionContainer>
    <SectionContainer id="certifications">
      <h2 class="mb-3 flex items-center gap-x-2 text-3xl font-semibold">
        <CVIcon class="size-8" />
        Certifications
      </h2>
      <Certifications />
    </SectionContainer>
    <SectionContainer id="about">
      <h2 class="mb-3 flex items-center gap-x-2 text-3xl font-semibold">
        <UserIcon class="size-8" />
        About Me
      </h2>
      <AboutMe />
    </SectionContainer>
  </main>
</Layout>
