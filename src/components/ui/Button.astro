---
interface Props {
  href?: string;
  type?: "button" | "submit" | "reset";
  class?: string;
  target?: string;
  rel?: string;
}
const { href, type = "button", class: className, target, rel } = Astro.props as Props;
---

{
  href ? (
    <a
      href={href}
      target={target}
      rel={rel}
      class={`inline-flex items-center justify-center rounded-full border border-white/15 bg-white/5 px-3 py-2 text-sm font-medium text-white transition hover:scale-105 hover:bg-white/10 focus:scale-95 ${className ?? ""}`}
    >
      <slot />
    </a>
  ) : (
    <button
      type={type}
      class={`inline-flex items-center justify-center rounded-full border border-white/15 bg-white/5 px-3 py-2 text-sm font-medium text-white transition hover:scale-105 hover:bg-white/10 focus:scale-95 ${className ?? ""}`}
    >
      <slot />
    </button>
  )
}
