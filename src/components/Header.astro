---
const { currentLocale, getRelativeLocaleUrl } = Astro.props;
import { buildLocaleHash } from "../lib/links";
const L = (hash: string) => buildLocaleHash(getRelativeLocaleUrl, currentLocale, hash);
---

<header
  class="fixed top-0 z-40 mx-auto flex w-full items-center justify-center px-4 py-6 pr-16 sm:px-6 sm:pr-20 md:px-8 xl:w-[1120px]"
>
  <nav
    class={`hidden lg:flex 
      border border-black
      rounded-full px-3 py-2
      flex-row items-center
      bg-gray-200/10 dark:bg-black/50  backdrop-blur-2xl
      `}
  >
    <a class="rounded-full px-3 transition hover:bg-white/10" href={L("/#")}>
      {currentLocale === "es" ? "Inicio" : "Home"}
    </a>
    <a class="rounded-full px-3 transition hover:bg-white/10" href={L("/#experience")}>
      {currentLocale === "es" ? "Experiencia" : "Experience"}
    </a>

    <a class="rounded-full px-3 transition hover:bg-white/10" href={L("/#projects")}>
      {currentLocale === "es" ? "Proyectos" : "Projects"}
    </a>
    <a class="rounded-full px-3 transition hover:bg-white/10" href={L("/#certifications")}>
      {currentLocale === "es" ? "Certificaciones" : "Certifications"}
    </a>
    <a class="rounded-full px-3 transition hover:bg-white/10" href={L("/#about")}>
      {currentLocale === "es" ? "Sobre m√≠" : "About"}
    </a>
    <a class="rounded-full px-3 transition hover:bg-white/10" href={L("/#")}>
      {currentLocale === "es" ? "Contacto" : "Contact"}
    </a>
  </nav>
</header>
