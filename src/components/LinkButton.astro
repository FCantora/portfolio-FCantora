---
const { link } = Astro.props;
import Button from "../components/ui/Button.astro";
---

<Button
  href={link}
  target="_blank"
  rel="noopener noreferrer"
  class="mr-2 border-gray-200 bg-white px-2 py-1 text-sm text-gray-900 hover:bg-gray-400 hover:text-blue-700 focus:scale-90 dark:border-gray-600 dark:bg-gray-800 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white"
>
  <slot />
</Button>
