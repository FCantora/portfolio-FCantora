---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "@fontsource-variable/onest";
import { getRelativeLocaleUrl } from "astro:i18n";
import { buildLocaleHash } from "../lib/links";
import { Image } from "astro:assets";
import esFlag from "../assets/es.png";
import enFlag from "../assets/en.png";
import thumb from "../assets/thumb.png";
import thumbSvg from "../assets/thumb.svg";
import headerScriptUrl from "../scripts/header.ts?url";
interface Props {
  title: string;
  description: string;
}
const currentLocale = Astro.currentLocale || "en";
const { description, title } = Astro.props;
---

<!doctype html>
<html lang={currentLocale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={thumbSvg} />
    <link rel="icon" type="image/png" href={thumb.src} />
    <link rel="apple-touch-icon" href={thumb.src} />
    <link rel="manifest" href="/manifest.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <!-- <div
      class="fixed top-0 z-[-2] h-screen w-screen bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-5%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
    > -->
    <!-- <div class="fixed z-[-2] h-full w-full bg-neutral-900">
      <div
        class="absolute inset-0 bg-fuchsia-400 bg-[size:20px_20px] opacity-20 blur-[100px]"
      >
      </div>
    </div> -->
    <div
      class="fixed inset-0 -z-10 h-full w-full items-center px-5 py-24 [background:radial-gradient(125%_125%_at_50%_10%,#000_40%,#7c5bf7_100%)]"
    >
    </div>
    <div class="xs:w-full relative mx-auto w-full xl:w-[1120px]">
      <Header currentLocale={currentLocale} getRelativeLocaleUrl={getRelativeLocaleUrl} />
      <button
        id="menu-btn"
        aria-label="Open menu"
        class="absolute left-4 top-6 z-50 flex h-10 w-10 items-center justify-center overflow-hidden rounded-full border border-black/50 bg-white/10 shadow-sm backdrop-blur transition hover:scale-105 lg:hidden"
        type="button"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="currentColor"
          class="h-8 w-8 opacity-80"
        >
          <path
            fill-rule="evenodd"
            d="M3.75 6.75A.75.75 0 0 1 4.5 6h15a.75.75 0 0 1 0 1.5h-15a.75.75 0 0 1-.75-.75Zm0 5.25a.75.75 0 0 1 .75-.75h15a.75.75 0 0 1 0 1.5h-15a.75.75 0 0 1-.75-.75Zm.75 4.5a.75.75 0 0 0 0 1.5h15a.75.75 0 0 0 0-1.5h-15Z"
            clip-rule="evenodd"></path>
        </svg>
      </button>
      <nav
        id="mobile-menu"
        class="pointer-events-none absolute left-16 top-6 z-50 flex flex-col gap-2 rounded-2xl border border-white/15 bg-black/40 p-2 opacity-0 shadow-xl backdrop-blur-xl transition lg:hidden"
      >
        <a
          class="rounded-full px-3 py-2 transition hover:bg-white/10"
          href={buildLocaleHash(getRelativeLocaleUrl, currentLocale, "/#")}
        >
          {currentLocale === "es" ? "Inicio" : "Home"}
        </a>
        <a
          class="rounded-full px-3 py-2 transition hover:bg-white/10"
          href={buildLocaleHash(getRelativeLocaleUrl, currentLocale, "/#experience")}
        >
          {currentLocale === "es" ? "Experiencia" : "Experience"}
        </a>
        <a
          class="rounded-full px-3 py-2 transition hover:bg-white/10"
          href={buildLocaleHash(getRelativeLocaleUrl, currentLocale, "/#projects")}
        >
          {currentLocale === "es" ? "Proyectos" : "Projects"}
        </a>
        <a
          class="rounded-full px-3 py-2 transition hover:bg-white/10"
          href={buildLocaleHash(getRelativeLocaleUrl, currentLocale, "/#certifications")}
        >
          {currentLocale === "es" ? "Certificaciones" : "Certifications"}
        </a>
        <a
          class="rounded-full px-3 py-2 transition hover:bg-white/10"
          href={buildLocaleHash(getRelativeLocaleUrl, currentLocale, "/#about")}
        >
          {currentLocale === "es" ? "Sobre mí" : "About"}
        </a>
        <a
          class="rounded-full px-3 py-2 transition hover:bg-white/10"
          href={buildLocaleHash(getRelativeLocaleUrl, currentLocale, "/#")}
        >
          {currentLocale === "es" ? "Contacto" : "Contact"}
        </a>
      </nav>
      <nav id="lang-switcher" class="absolute right-4 top-6 z-50 flex items-center gap-2">
        <a
          href={buildLocaleHash(getRelativeLocaleUrl, "es", "/#")}
          aria-label="Cambiar a Español"
          class={`w-8 h-8 rounded-full overflow-hidden border flex items-center justify-center hover:scale-105 transition shadow-sm ${currentLocale === "es" ? "border-yellow-400 ring-1 ring-yellow-900" : "border-black/50"}`}
          data-page-transition
          title="Español"
        >
          <Image
            src={esFlag}
            alt="Español"
            width={100}
            height={100}
            class="h-full w-full opacity-40 transition hover:opacity-100"
          />
        </a>
        <a
          href={buildLocaleHash(getRelativeLocaleUrl, "en", "/#")}
          aria-label="Switch to English"
          class={`w-8 h-8 rounded-full overflow-hidden border flex items-center justify-center hover:scale-105 transition shadow-sm ${currentLocale === "en" ? "border-yellow-400 ring-1 ring-yellow-900" : "border-black/50"}`}
          data-page-transition
          title="English"
        >
          <Image
            src={enFlag}
            alt="English"
            width={100}
            height={100}
            class="h-full w-full opacity-40 transition hover:opacity-100"
          />
        </a>
      </nav>
    </div>
    <!-- Spacer to offset the fixed header height -->
    <div class="md:h-24"></div>
    <slot />
    <button
      id="back-to-top"
      aria-label="Back to top"
      class="pointer-events-none fixed bottom-4 right-4 z-50 flex h-10 w-10 items-center justify-center rounded-full border border-white/20 bg-white/10 p-3 opacity-0 shadow-lg transition hover:bg-white/20 lg:hidden"
      type="button"
    >
      <span class="text-2xl">↑</span>
    </button>
    <div
      id="page-loader"
      class="fixed inset-0 z-[60] hidden items-center justify-center bg-black/60 backdrop-blur-sm"
    >
      <div
        class="h-10 w-10 animate-spin rounded-full border-4 border-white/30 border-t-white"
        aria-label="Loading"
      >
      </div>
    </div>
    <script type="module" src={headerScriptUrl}></script>
    <script>
      if ("serviceWorker" in navigator) {
        window.addEventListener("load", () => {
          navigator.serviceWorker.register("/sw.js");
        });
      }
    </script>
    <Footer currentLocale={currentLocale} getRelativeLocaleUrl={getRelativeLocaleUrl} />
  </body>

  <style is:global>
    :root {
      color-scheme: dark;
    }
    html {
      font-family: "Onest Variable", system-ui, sans-serif;
      scroll-behavior: smooth;
    }
    body {
      /* background: #050505; */
      background: #292727;
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }
    @media (prefers-reduce-motion: reduce) {
      html {
        scroll-behavior: auto;
      }
    }
    /* Header hide/show animation */
    header {
      transition: transform 200ms ease;
    }
    header.is-hidden {
      transform: translateY(-100%);
    }
  </style>
</html>
