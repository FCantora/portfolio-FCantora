    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "astro": "^5.14.4",
    "astro-i18n": "^2.2.4",
    "flowbite": "^3.1.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^3.3.5"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "astro-eslint-parser": "^1.0.3",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
